{
    "version": "1.0.0",
    "description": "BOS-Radio-Bridge Python Configuration",
    
    "usrp": {
        "listen_address": "0.0.0.0",
        "listen_port": 40001,
        "protocol": "USRP",
        "header_size": 32,
        "buffer_size": 4096
    },
    
    "alsa": {
        "device": "hw:2,1",
        "sample_rate": 16000,
        "channels": 1,
        "dtype": "int16",
        "blocksize": 320,
        "queue_size": 10,
        "buffer_size": 4096,
        "use_alsa": true
    },
    
    "mmdvm": {
        "address": "127.0.0.1",
        "port": 33100,
        "protocol": "TLV",
        "buffer_size": 4096
    },
    
    "mmdvm_rx": {
        "listen_address": "0.0.0.0",
        "rx_port": 33101,
        "protocol": "TLV",
        "buffer_size": 4096
    },
    
    "usrp_client": {
        "target_address": "127.0.0.1",
        "target_port": 40001,
        "protocol": "USRP",
        "buffer_size": 4096
    },
    
    "jitter_buffer": {
        "frame_time_ms": 20,
        "buffer_size": 3,
        "enable": true
    },
    
    "status_logger": {
        "enable": true,
        "update_interval": 1.0,
        "console_output": true
    },
    
    "echo_interlock": {
        "enable": true,
        "interlock_delay_ms": 100,
        "tx_mute_gain": 0.0,
        "rx_timeout_ms": 200
    },
    
    "audio": {
        "sample_rate": 8000,
        "channels": 1,
        "sample_width": 2,
        "bytes_per_sample": 2,
        "samples_per_frame": 160,
        "frames_per_packet": 1,
        "gain": 1.0,
        "gain_min": 0.0,
        "gain_max": 10.0,
        "enable_agc": false,
        "agc_threshold_db": -20.0,
        "agc_slope_db": 10.0,
        "agc_decay_ms": 100
    },
    
    "processing": {
        "enable_interception_pipe": true,
        "interception_plugins": [],
        "enable_noise_reduction": false,
        "enable_audio_enhancement": false
    },
    
    "logging": {
        "level": "INFO",
        "file": "bos_radio_bridge.log",
        "console": true,
        "max_bytes": 10485760,
        "backup_count": 5
    },
    
    "system": {
        "thread_pool_size": 4,
        "queue_size": 100,
        "timeout_seconds": 5,
        "enable_metrics": true,
        "metrics_port": 9090
    },
    
    "vox": {
        "threshold": 1000,
        "hangtime_ms": 600,
        "hard_timeout_ms": 60000,
        "enable_vox": true
    },
    
    "phase7": {
        "ai_modules_enabled": false,
        "noise_cancelling_enabled": false,
        "plugin_directory": "./plugins",
        "plugin_config": {}
    }
}

